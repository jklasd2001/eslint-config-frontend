{
    "editor.codeActionsOnSave": {
        "source.fixAll.eslint": true
    },
    "editor.formatOnSave": true,
    "eslint.validate": [
        "javascript",
        "javascriptreact",
        "typescript",
        "typescriptreact",
        "yaml",
        "json",
    ],
    "eslint.packageManager": "yarn",
    "npm.packageManager": "yarn",
    "files.exclude": {
        "**/dist": true,
        "**/node_modules": true
    },
}